<UserControl x:Class="Gauges.Polar.GaugePolar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gauges.Polar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Viewbox x:Name="ViewBoxMain" Stretch="Uniform">
        <Grid x:Name="GridMain" Width="200" Height="200">
            <Ellipse x:Name="EllipseBase" >
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#FFDADBAA"/>
                        <GradientStop Color="#FFDFDFDF"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

        </Grid>
    </Viewbox>
    
</UserControl>
