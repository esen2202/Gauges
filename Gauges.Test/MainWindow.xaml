<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gauges.Test"
        xmlns:Polar="clr-namespace:Gauges.Polar;assembly=Gauges.Polar" x:Class="Gauges.Test.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="690">
    <Grid Background="#FFC9C0C0">
        <Polar:GaugePolar Margin="157,10,161,90" Angle="{Binding Value, ElementName=sliderAngle}" Division="11" Label="54" Radius="{Binding Value, ElementName=sliderRadius}"   />
        <Slider x:Name="sliderAngle" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="101,325,0,0" Maximum="360" Width="448" Value="-2"/>
        <Slider x:Name="sliderRadius" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="101,358,0,0" Maximum="100" Width="448"/>

    </Grid>
</Window>
